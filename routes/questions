(select routest.route_id,routest.route_name,start_point,end_point,alternateroutest.route_name as alternate_route from routest,alternateroutest where routest.route_id = alternateroutest.route_id;



select alternate_route from (select routest.route_id,routest.route_name,start_point,end_point,alternateroutest.route_name as alternate_route from routest,alternateroutest where routest.route_id = alternateroutest.route_id) as `derived table` where start_point='Chennai' and end_point='Ennore';